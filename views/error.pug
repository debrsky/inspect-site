doctype html
html
  head
    title Error #{statusCode}
    style.
      body {
        padding: 50px;
        font: 14px "Helvetica Neue", Helvetica, Arial;
      }
      .error {
        padding: 20px;
        background: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
      }
      .error-title {
        color: #cc0000;
        margin-top: 0;
      }
      .stack {
        margin-top: 20px;
        white-space: pre-wrap;
        font-family: monospace;
        background: #f8f8f8;
        padding: 15px;
        border-radius: 4px;
      }

  body
    .error
      h1.error-title Error #{statusCode}
      pre= message
      if dev && stack
        pre.stack
          code= stack
